<ol class = "post-list">
    <!-- #each begins loop -->
    <!-- any code between <li> tags will be repeated for every item in posts -->
    {{#each posts as |post|}}
    <li>
        <article class = "post">
            <div class = "title">
                <a href = "{{post.post_url}}" target = "__blank">{{post.title}}</a>
                <span>({{post.post_url}})</span>
            </div>
            <div class = "meta">
                {{post.vote_count}} point(s) by {{post.user.username}} on
                {{post.created_at}}
                |
                <a href = "/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    <!-- /each ends loop -->
    {{/each}}
</ol>